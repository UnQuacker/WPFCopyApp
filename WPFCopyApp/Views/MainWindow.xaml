<Window x:Class="WPFCopyApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:viewmodels="clr-namespace:WPFCopyApp.ViewModels" 
        d:DataContext="{d:DesignInstance Type=viewmodels:ViewModel}"
        mc:Ignorable="d"
        x:Name="MainWindowView"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="MainWindowGrid" Background="AliceBlue">
        
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Grid.Row="2" Grid.Column="2" Content="{Binding label}" />
        <ProgressBar Grid.Row="3" Grid.Column="2" Minimum="0" Maximum="100" Value="{Binding progressbar}" />
        <Button Grid.Column="5" Grid.Row="6" Content="Change Label" Command="{Binding ChangeLabel1}"></Button>
        <Button Grid.Column="5" Grid.Row="7" Content="Change Label" Command="{Binding ChangeLabel2}"></Button>
        
        <Button Grid.Column="0" Grid.Row="5" Content="Laggy file populate" Command="{Binding CopyCommand}"></Button>
        <Button Grid.Column="0" Grid.Row="6" Content="Thread file populate" Command="{Binding WriteThreadCommand}"></Button>
        <Button Grid.Column="0" Grid.Row="7" Content="Async file populate" Command="{Binding WriteAsyncCommand}"></Button>
    </Grid>
</Window>
